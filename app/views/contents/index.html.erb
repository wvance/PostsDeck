<div class="row">
  <div class="col-xs-10 col-xs-offset-1" id="editorialCalendar">
    <%= month_calendar(attribute: :publish_at, events: @calendar_contents) do |date, contents| %>
      <div class="dayDate">
        <%= date.strftime("%d") %>
      </div>

      <div class="dayEvents">
        <% contents[0...3].each do |content| %>
          <div>
            <%= link_to content do%>
              <%= kind_to_symbol(content.kind) %>  <%= content.title %>
            <%end%>
          </div>
        <% end %>
      </div>
      <div class="dayEventNumber">
        <%# contents.length %>
      </div>
    <% end %>
  </div>
</div>
