<!DOCTYPE html>
<html>
	<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.js'></script>
	<link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />

<head>
  <title>WesleyVance</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller_name %> <%= action_name %>">
	<div id="container">

		<% flash.each do |key, value| %>
		  <div class="alert alert-<%= key %> center"><%= value %></div>
		<% end %>
			
		<% if current_page?(root_path()) || current_page?(controller: '/welcome', action: 'index') %>
		<%else%>
			<% if user_signed_in? %>
				<div class="adminBar links">
			  	<h4>
			  		<%= link_to root_path, :class=>"navBarLinks" do%>
							Home
						<%end%>
			  		<%= link_to(destroy_user_session_path, :method => :delete, :class=>"navBarLinks") do%>
			  			Sign Out
			  		<%end%>
			  	</h4>
			  </div>
		  <%end%>
	  <%end%>

		<%= yield %>
	</div>
</body>
</html>
