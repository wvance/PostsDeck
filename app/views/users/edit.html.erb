<%= form_for(@user) do |f| %> <!--, remote: true-->

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="userSettings">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-lg-8 col-lg-offset-2">
        <div class="row">
          <div class="col-xs-2">
            <%= image_tag @user.avatar, :class=>"profileImg img-circle"%>
          </div>
          <div class="col-xs-8 col-xs-offset-1">
            <span class="name">
              <%=@user.first_name%><span class="yellow"><%= @user.last_name%></span>
            </span>
            <%= link_to(destroy_user_session_path, :method => :delete, :class=>"signOut") do%>
              <i class="fa fa-sign-out"></i>
            <%end%>
            <h4>@<%=@user.username%></h4>
          </div>
        </div>

        <hr>
        <!-- DISPLAY THE BIO -->
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-2">
                <h4>Bio:</h4>
              </div>
            <%if @user.bio.present? %>
              <!-- <%= @user.bio%> -->
              <div class="col-xs-10">
                <%= f.text_area(:bio, :placeholder => @user.bio, :class=>"autoGrowText form-control formText", :rows=>"2")%>
              </div>
            <%else%>
              <div class="col-xs-10">
                <%= f.text_area(:bio, :placeholder => "Hello I am " + @user.username.capitalize, :class=>"autoGrowText form-control formText", :rows=>"2")%>
              </div>
            <%end%>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-3 col-sm-2">
              <h4>Email </h4>
            </div>
            <div class="col-xs-9 col-sm-8">
              <%= f.text_field(:email, :placeholder => @user.email, :class=>"form-control formText")%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-3 col-sm-2">
              <h4>Calendly <br>Username </h4>
            </div>
            <div class="col-xs-9 col-sm-8">
              <%= f.text_field(:calendly, :placeholder => @user.calendly, :class=>"form-control formText")%>
            </div>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-3 col-sm-2">
              <h4>Github <br>Username</h4>
            </div>
            <div class="col-xs-9 col-sm-8">
              <%= f.text_field(:github, :placeholder => @user.github, :class=>"form-control formText")%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-3 col-sm-2">
              <h4>LinkedIn <br>Username</h4>
            </div>
            <div class="col-xs-9 col-sm-8">
              <%= f.text_field(:linkedin, :placeholder => @user.linkedin, :class=>"form-control formText")%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="col-xs-3 col-sm-2">
              <h4>Facebook <br>Username</h4>
            </div>
            <div class="col-xs-9 col-sm-8">
              <%= f.text_field(:facebook, :placeholder => @user.facebook, :class=>"form-control formText")%>
            </div>
          </div>
        </div>

        <hr>
        <div class="row">
          <h2>Stats</h2>
          <div class="col-xs-6">
            <h3>PostsDeck</h3>
            <h5>
              <%= @userContent.count %> Posts</i> |
              <%= @userProject.count %> Projects</i>
            </h5>
          </div>
          <div class="col-xs-6">
            <h3>Twitter </h3>
            <div class="twitterInfo" class="links">
              <%= link_to @twitterLink, :target=>"_blank" do%>
                <h5>
                  <%= @user.number_statuses%> <i class="fa fa-comment"></i>
                  <%= @user.number_followers%> <i class="fa fa-users"></i>
                  <%= @user.rating%> <i class="fa fa-heart"></i>
                </h5>
              <%end%>
            </div>
          </div>
        </div>

        <!-- SUBMIT FORM -->
        <div class="row">
          <div class="col-xs-12">
            <div class="actions pull-right">
              <%= f.submit "Submit", class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
