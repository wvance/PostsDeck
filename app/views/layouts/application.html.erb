<!DOCTYPE html>
<html>
	<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.js'></script>
	<link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />
	<script src='https://api.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/leaflet.markercluster.js'></script>
	<link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/MarkerCluster.css' rel='stylesheet' />
	<link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/MarkerCluster.Default.css' rel='stylesheet' />

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta http-equiv=”content-language” content=”en-us”>

  <title>Mkyaljsk Vasjkn <%= yield(:title) %></title>
  <!-- BING VALIDATE -->
  <meta name="msvalidate.01" content="EC77DC7A959710EE16DD5634AE8259D6" />
  <meta name='description'
    content='<%= yield_meta_tag(:description, 'PostsDeck: Blogging Post') %>' />
	<meta name='keywords'
    content='<%= yield_meta_tag(:keywords, 'PostsDeck,Blog') %>' />

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller_name %> <%= action_name %>">

	<!-- =========================================================================================================== -->
	<!-- 																	THANKS FOR CHECKING OUT MY CODE!  																				 -->
	<!-- FEEL FREE TO TAKE AND SHARE ANY PART JUST LINK BACK TO THIS SITE IN CODE COMMENTS SO OTHERS CAN SEE IT TOO! -->
	<!-- 												IF YOU HAVE QUESITONS EMAIL ME AT WESLEY.VANCE@MAC.COM :)  													 -->
	<!-- =========================================================================================================== -->

	<div id="container">

		<div class="flashNotices">
			<% flash.each do |key, value| %>
			  <div class="alert alert-<%= key %> center"><%= value %></div>
			<% end %>
		</div>


		<div class="adminBar">
			<div class="adminBarLinks links">
		  	<span class="adminBarLinkIcons">
					<% if user_signed_in? %>
			  		<%= link_to root_url(:subdomain => current_user.subdomain), :class=>"navBarLinks" do%>
							<i class="fa fa-home"></i>
						<%end%>
						<!-- <%= link_to(contents_path(@content, content: {:kind => "twitter"}), :method => :post) do%>
							Tweet
						<%end%> -->
						<%= link_to settings_path() do %>
							<i class="fa fa-cog"></i>
						<%end%>
			  		<%= link_to(destroy_user_session_path, :method => :delete, :class=>"navBarLinks") do%>
			  			<i class="fa fa-sign-out"></i>
			  		<%end%>
				  <%else%>
			  		<%= link_to user_omniauth_authorize_path(:twitter), :class=>"navBarLinks" do%>
							<i class="fa fa-sign-in"></i>
						<%end%>
			  	<%end%>
		  	</span>
		  </div>
	  </div>


		<div class="bodyWrapper">
			<div class="fixedSideBar">
				<div class="sideBarSection center">
					<div class="profile">
						<div class="profileName avatar">
							<%= image_tag @user.avatar, :class=>"profileImg img-circle"%>
							<%=link_to root_path() do%>
								<h1><span class="thinFont"><span class="white"><%=@user.first_name%></span><span class="yellow"><%= @user.last_name%></span></span></h1>
							<%end%>

							<!-- <div class="twitterInfo" class="links">
								<%= link_to @twitterLink, :target=>"_blank" do%>
									<h5>@<%= @user.username %></h5>
									<h6>
										<%= @user.number_statuses%> <i class="fa fa-comment"></i>
										<%= @user.number_followers%> <i class="fa fa-users"></i>
										<%= @user.rating%> <i class="fa fa-heart"></i>
									</h6>
								<%end%>
							</div> -->
						</div>

						<h6 class="profileBio">
							<%if @user.bio.present? %>
								<span class="offWhite"><%= @user.bio%></span>
							<%else%>
								Hello I am @<%= @user.username.capitalize %>
							<%end%>
						</h6>

					</div>
					<hr class="navBreak">
					<div class="navBarLinks">
						<ul class="links">
							<li>
								<h3><%=link_to('Projects', root_path(:anchor => 'projects'))%></h3>
							</li>
							<li>
								<h3><%=link_to('Blog', root_path(:anchor => 'map'))%></h3>
							</li>
							<% if @user.email.present? %>
								<li>
									<h3>
										<%= mail_to @user.email, subject: "Project Proposal", body:"Hi " + @user.first_name + "," do %>
										  Hire
										<% end %>
									</h3>
								</li>
							<%end%>
						</ul>
					</div>
					<div class="profileFooter links">

						<%= link_to @twitterLink, :target => "_blank" do %>
							<i class="fa fa-twitter"></i>
						<% end %>
						<%= link_to "https://www.linkedin.com/in/wesvance", :target=>"_blank" do %>
							<i class="fa fa-linkedin"></i>
						<%end%>
						<%= link_to "https://github.com/wvance", :target=>"_blank" do %>
							<i class="fa fa-github"></i>
						<%end%>
						<%= mail_to "wesley.vance@mac.com", subject: "Introduction", body:"Hi Wesley, \n" do %>
							<i class="fa fa-envelope"></i>
						<% end %>
					</div>
				</div>
			</div>
			<div class="mainContent">
				<%= yield %>
			</div>
			<br>
			<div class="footer">
				<div class="row" id="connect">
					<h4 class="center">
						Made with love in
						<a href="http://rubyonrails.org" target="_blank">
							<span class="ruby">RoR</span>
						</a> by
						<%= link_to root_url(:subdomain => :wesadvance) do%>
							<span class="yellow">Wesley Vance</span>
						<%end%>
					</h4>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
