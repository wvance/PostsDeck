<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.text_field :email, class: "form-control commentEmail", placeholder:"john@appleseed.com", :required => true%>
  </div>
  <div class="form-group commentBody">
    <%= f.text_area :body, :placeholder => "What's on your mind?!", :class=>"wmd-input autoGrowText form-control", :rows=>"2", :required => true%>
  </div>
  <%= f.hidden_field :parent_comment %>
  <%= f.hidden_field :content_id %>

  <div class="actions pull-right">
    <%= f.submit "Submit", class: "btn btn-default" %>
  </div>
<% end %>
